{
  "name": "astro",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/astro/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/astro",
        "main": "libs/astro/src/index.ts",
        "tsConfig": "libs/astro/tsconfig.lib.json",
        "assets": [
          "libs/astro/*.md",
          {
            "input": "./libs/astro/src",
            "glob": "**/!(*.ts)",
            "output": "./src"
          },
          {
            "input": "./libs/astro/src",
            "glob": "**/*.d.ts",
            "output": "./src"
          },
          {
            "input": "./libs/astro",
            "glob": "generators.json",
            "output": "."
          },
          {
            "input": "./libs/astro",
            "glob": "executors.json",
            "output": "."
          }
        ]
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["libs/astro/**/*.ts", "libs/astro/package.json"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/astro/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    }
  },
  "tags": []
}
