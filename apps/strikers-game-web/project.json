{
  "name": "strikers-game-web",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/strikers-game-web/src",
  "namedInputs": {
    "sw.js": ["{workspaceRoot}/dist/service-worker/src/sw.js"]
  },
  "targets": {
    "build": {
      "outputs": ["{workspaceRoot}/dist/{projectRoot}"],
      "executor": "@ogc/astro:build",
      "dependsOn": [
        {
          "target": "copy-sw-bundle"
        }
      ],
      "options": {
        "outputPath": "dist/apps/strikers-game-web/dist/server",
        "outputFileName": "entry.mjs"
      }
    },
    "dev": {
      "executor": "@nxtensions/astro:dev",
      "options": {}
    },
    "start": {
      "executor": "@nx/js:node",
      "options": {
        "watch": false,
        "buildTarget": "strikers-game-web:build",
        "host": "0.0.0.0"
      }
    },
    "preview": {
      "dependsOn": [
        {
          "target": "build",
          "projects": "self"
        }
      ],
      "executor": "@nxtensions/astro:preview",
      "options": {}
    },
    "check": {
      "executor": "@nxtensions/astro:check"
    },
    "sync": {
      "executor": "@nxtensions/astro:sync"
    },
    "storybook": {
      "executor": "@nx/storybook:storybook",
      "options": {
        "port": 4400,
        "configDir": "apps/strikers-game-web/.storybook"
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "copy-sw-bundle": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cp -r dist/libs/service-worker/src/* apps/strikers-game-web/public/"
      },
      "inputs": ["sw.js"],
      "dependsOn": [
        {
          "projects": "service-worker",
          "target": "build"
        }
      ]
    },
    "build-storybook": {
      "executor": "@nx/storybook:build",
      "outputs": ["{options.outputDir}"],
      "options": {
        "outputDir": "dist/storybook/strikers-game-web",
        "configDir": "apps/strikers-game-web/.storybook"
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "serve-storybook": {
      "executor": "@nx/web:file-server",
      "options": {
        "host": "0.0.0.0",
        "buildTarget": "strikers-game-web:build-storybook",
        "parallel": false,
        "staticFilePath": "dist/storybook/strikers-game-web"
      },
      "configurations": {
        "ci": {
          "buildTarget": "strikers-game-web:build-storybook:ci"
        }
      }
    }
  },
  "tags": []
}
